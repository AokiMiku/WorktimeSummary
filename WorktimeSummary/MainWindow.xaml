<Window x:Class="WorktimeSummary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ApS Util - WorktimeSummary" MinHeight="400" MinWidth="900" Height="900" Width="0"
        Icon="ressources/graphics/icons/ApS.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Name="HeaderRow" Height="40" />
            <RowDefinition />
            <RowDefinition Name="SumRow" Height="40" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center" Name="YearSelection"
                  Margin="3 0" />
        <ComboBox Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" VerticalAlignment="Center" Name="MonthSelection"
                  Margin="3 0" />
        <Button Name="Refresh" Grid.Row="1" Grid.Column="12" BorderThickness="0" Background="Transparent" Height="30"
                Width="30">
            <Image Source="ressources/graphics/icons/refresh.ico" />
        </Button>
        <StackPanel Grid.Row="1" Grid.Column="13" Grid.ColumnSpan="3" HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Label Padding="5 0" Content="Last Refresh:" />
            <Label Name="LastRefresh" Padding="5 0" Content="00:00:00" />
        </StackPanel>

        <Button Grid.Row="1" Grid.Column="16" BorderThickness="0" Background="Transparent" Height="30" Width="30"
                Click="ButtonBase_OnClick">
            <Image Source="ressources/graphics/icons/wheel.ico" />
        </Button>

        <Button Grid.Row="2" Grid.Column="3" BorderThickness="0" Background="Transparent" Height="30" Width="50"
                Click="ButtonMonthLeft_OnClick" HorizontalAlignment="Right">
            <Image Source="ressources/graphics/icons/arrow_left.ico" />
        </Button>
        <Button Grid.Row="2" Grid.Column="5" BorderThickness="0" Background="Transparent" Height="30" Width="50"
                Click="ButtonMonthRight_OnClick" HorizontalAlignment="Left">
            <Image Source="ressources/graphics/icons/arrow_right.ico" />
        </Button>

        <ScrollViewer Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="17">
            <Grid Name="DataGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

            </Grid>
        </ScrollViewer>
    </Grid>
</Window>