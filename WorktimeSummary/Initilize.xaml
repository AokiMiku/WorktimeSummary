<Window x:Class="WorktimeSummary.Initilize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WorktimeSummary"
        mc:Ignorable="d"
        Height="100" Width="300" 
        BorderThickness="0" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <ProgressBar Name="UpdateProgress" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Name="UpdateProgressText" >0</Label>
            <Label Margin="0 0 3 0">%</Label>
        </DockPanel>
    </Grid>
</Window>
